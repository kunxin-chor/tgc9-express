{{#extends 'base'}}

{{#block 'content'}}
<form method="POST">
    <div>
        <label class="form-label">Food Name</label>
        <input type="text" class="form-control" id="food" name="food"/>
    </div>
    <div>
        <label>Timing of Meal</label>
            <input type="radio" name="meal" value="breakfast" checked>Breakfast
            <input type="radio" name="meal" value="lunch">Lunch
            <input type="radio" name="meal" value="dinner">Dinner
              
    </div>
    <div>
        <label>Tags</label>
        <input type="checkbox" name="tags" value="unhealthy"/>Unhealthy
        <input type="checkbox" name="tags" value="glutten-free"/>Glutten Fre
        <input type="checkbox" name="tags" value="vegan"/>Vegan
        <input type="checkbox" name="tags" value="oily"/>Oily
    </div>
        <input type="submit" class="mt-3"/>
</form>

{{/block}}


{{/extends}}